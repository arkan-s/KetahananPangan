{
  "openapi": "3.0.0",
  "info": {
    "title": "Layanan Data Ketahanan Pangan",
    "version": "1.0.0",
    "description": "Microservice untuk akses data komoditas pangan."
  },
  "paths": {
    "/komoditas": {
      "get": {
        "summary": "Mendapatkan daftar komoditas",
        "responses": {
          "200": {
            "description": "Daftar komoditas berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Komoditas"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Menambahkan komoditas baru",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Komoditas"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Komoditas berhasil ditambahkan"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/komoditas/{komoditas_id}": {
      "get": {
        "summary": "Mendapatkan detail komoditas",
        "responses": {
          "200": {
            "description": "Detail komoditas berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Komoditas"
                }
              }
            }
          },
          "404": {
            "description": "Komoditas tidak ditemukan"
          }
        }
      },
      "put": {
        "summary": "Memperbarui komoditas",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Komoditas"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Komoditas berhasil diperbarui"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Komoditas tidak ditemukan"
          }
        }
      },
      "delete": {
        "summary": "Menghapus komoditas",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Komoditas berhasil dihapus"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Komoditas tidak ditemukan"
          }
        }
      },
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "komoditas_id",
          "in": "path",
          "required": true
        }
      ],
      "post": {
        "summary": "",
        "operationId": "post-komoditas-komoditas_id",
        "responses": {
          "200": {
            "description": "Komoditas berhasil ditambahkan"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Komoditas"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Komoditas": {
        "type": "object",
        "properties": {
          "Nama": {
            "type": "string"
          },
          "Kategori": {
            "type": "string"
          },
          "Deskripsi": {
            "type": "string"
          },
          "GudangKomoditas": {
            "$ref": "#/components/schemas/GudangKomoditas"
          }
        }
      },
      "GudangKomoditas": {
        "type": "object",
        "properties": {
          "Nama": {
            "type": "string"
          },
          "Kategori": {
            "type": "string"
          },
          "Lokasi": {
            "type": "string"
          }
        }
      }
    }
  }
}